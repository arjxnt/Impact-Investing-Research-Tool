# ============================================
# Impact Investing Research Tool - Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# Command: cp env.template .env

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Option 1: Use SQLite for Development (Default)
# Leave DATABASE_URL unset or use:
DATABASE_URL=sqlite:///./impact_investing.db

# Option 2: Use PostgreSQL for Production
# Uncomment and configure the PostgreSQL connection string:
# DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/impact_investing

# Alternative: Use individual database components (if DATABASE_URL is not set)
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=impact_investing

# ============================================
# APPLICATION SETTINGS
# ============================================

# Enable SQL query logging (useful for debugging)
# Set to 'true' to see all SQL queries in console
SQL_ECHO=false

# API Server Configuration
# API_HOST=0.0.0.0
# API_PORT=8000

# ============================================
# SECURITY SETTINGS (for future use)
# ============================================

# Secret key for JWT tokens (generate a secure random string)
# SECRET_KEY=your-secret-key-here

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# ============================================
# PRODUCTION SETTINGS
# ============================================

# Environment: development, staging, production
# ENVIRONMENT=development

# Enable/disable debug mode
# DEBUG=true

